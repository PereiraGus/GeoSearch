<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".countryPage">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/secondColor"
                    android:clickable="true"
                    android:text="@string/ctBtnSave"
                    app:cornerRadius="0dp" />

                <TextView
                    android:id="@+id/txtTotPop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ctTotalPop"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtCapital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ctCapital"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtLangs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ctLangs"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtHDI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ctHDI"
                    android:textColor="@color/black"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtSubtitPop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ctSubPopulation"
                    android:textColor="@color/firstColor"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDens"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ctDemoDesi"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtPopRural"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ctPopRural"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtPopUrban"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ctPopUrban"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtLifeExpec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ctLifeExpect"
                    android:textColor="@color/black"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtSubtitFis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ctSubFisiology"
                    android:textColor="@color/firstColor"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtRegion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ctRegion"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtTotalArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ctTotalArea"
                    android:textColor="@color/black"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtSubtitEcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ctSubEconomy"
                    android:textColor="@color/firstColor"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCrrc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ctCurrency"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtGDPB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ctGDPBrute"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtGDPC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ctGDPCapita"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtSubtitMap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ctSubMap"
                    android:textColor="@color/firstColor"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <WebView
                    android:id="@+id/mapWebView"
                    android:layout_width="match_parent"
                    android:layout_height="400dp">

                </WebView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtHist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ctSubHistory"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@color/secondColor"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button4"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/back_arrow"
            android:backgroundTint="@color/background"
            android:backgroundTintMode="add"
            android:drawableTint="@color/background"
            android:drawableTintMode="add"
            android:foregroundTint="@color/background"
            app:iconTint="@color/background"
            app:rippleColor="@color/background"
            app:strokeColor="@color/background"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/txtCtTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/ctTitlePlaceholder"
            android:textColor="@color/background"
            android:textSize="30sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>